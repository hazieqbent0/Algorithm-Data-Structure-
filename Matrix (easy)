#include <iostream>
#include <algorithm> // for sort
using namespace std;

int main() {
    // Step 1: Create a simple 2D array (3x3)
    int mat[3][3] = {
        {5, 4, 7},
        {1, 3, 8},
        {2, 9, 6}
    };

    // Step 2: Put all elements into a 1D array
    int numbers[9];   // because 3x3 = 9 elements
    int k = 0;
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            numbers[k] = mat[i][j];
            k++;
        }
    }

    // Step 3: Sort the 1D array
    sort(numbers, numbers + 9);

    // Step 4: Put sorted numbers back into the 2D array
    k = 0;
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            mat[i][j] = numbers[k];
            k++;
        }
    }

    // Step 5: Print the sorted matrix
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            cout << mat[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}
